{
  "_description": "AI Idea Evaluator Pipeline Configuration",
  "_version": "1.0",
  
  "input_directory": "./input_submissions",
  "output_directory": "./pipeline_output",
  
  "processing_settings": {
    "max_file_size": 52428800,
    "max_pages": 25,
    "supported_formats": [".pdf", ".ppt", ".pptx"],
    "processing_delay": 0
  },
  
  "vector_storage": {
    "type": "chromadb",
    "collection_name": "ai_evaluator_embeddings"
  },
  
  "logging": {
    "level": "INFO",
    "save_to_file": false
  },
  
  "output_formats": {
    "parquet": true,
    "json": true,
    "csv": false,
    "txt_reports": false
  }
}
